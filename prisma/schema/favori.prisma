// ============================================
// MarchesBTP - Model Favori
// MVP2 : Favoris entreprises
// ============================================

model Favori {
  id              Int       @id @default(autoincrement())
  
  // Utilisateur qui ajoute en favori
  userId          Int       @map("user_id")
  userType        String    @map("user_type")
  
  // Freelance mis en favori
  freelanceId     Int       @map("freelance_id")
  
  // Notes personnelles
  note            String?   @db.Text
  tags            String?   // Tags separes par virgule
  
  // Timestamps
  createdAt       DateTime  @default(now()) @map("created_at")

  // Relations
  freelance       Freelance @relation(fields: [freelanceId], references: [id], onDelete: Cascade)

  @@map("favoris")
  @@unique([userId, freelanceId])
  @@index([userId])
  @@index([freelanceId])
}
