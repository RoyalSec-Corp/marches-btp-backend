# ============================================
# Marchés BTP - Configuration Backend
# ============================================
# NE JAMAIS COMMITER CE FICHIER AVEC DES VRAIES VALEURS

# === SERVEUR ===
NODE_ENV=development
PORT=3002

# === BASE DE DONNÉES POSTGRESQL ===
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/marchebtp?schema=public"

# === JWT (Authentification) ===
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_MIN_64_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_VERY_LONG_RANDOM_STRING
JWT_REFRESH_EXPIRES_IN=7d

# === SÉCURITÉ ===
BCRYPT_ROUNDS=12

# === CORS ===
CORS_ORIGIN=http://localhost:3000

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === EMAIL ===
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=noreply@marches-btp.fr

# === APP ===
APP_URL=http://localhost:3000
API_URL=http://localhost:3002
